# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.at(path="/public", file)
GET		/manager/						controllers.Manager.landingPage()

GET		/manager/:proj/orgStats.json	controllers.Manager.getOrgStats(proj: String)
GET		/manager/:proj/timeline/:org	controllers.Manager.getOrgTimeLine(proj: String, org: String)
GET		/manager/statistics/:proj		controllers.Manager.loadStats(proj: String)
GET		/:collection/oai				controllers.OAI.show(collection: String)

# JSON data

GET		/manager/overall									controllers.Manager.getOverall()
GET		/manager/recordsPerProject							controllers.Manager.getRecordsPerProject()

GET		/manager/projects									controllers.Manager.getProjects()
GET		/manager/projects/:proj/overall						controllers.Manager.getOverallForProject(proj: String)
GET		/manager/projects/:proj/recordsPerOrganization/:ns	controllers.Manager.getRecordsPerOrganization(proj: String, ns: String)
